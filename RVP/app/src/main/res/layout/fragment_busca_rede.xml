<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="rarolabs.com.br.rvp.fragments.RedesFragment"
    android:background="@color/white"
    android:layout_marginTop="152dp"
    >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/loading"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="48dp"
            android:id="@+id/spinner"
            android:src="@drawable/ic_tutorial_loading"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buscando_redes"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:singleLine="false"
            android:textAlignment="center"
            android:id="@+id/status_busca"
            />

    </LinearLayout>
    <!--android:paddingBottom="@dimen/activity_detail_vertical_margin"-->
    <!--android:layout_below="@id/toolbar"-->
    <FrameLayout
        android:id="@+id/fragment_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?android:attr/actionBarSize" />

</FrameLayout>
