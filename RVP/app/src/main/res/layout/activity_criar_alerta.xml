<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:statusBarColor="@android:color/transparent"
    tools:context="rarolabs.com.br.rvp.activities.alertas.CriarAlertaActivity"
    tools:ignore="MergeRootFrame"
    android:background="@color/white">
    <include
        layout="@layout/barra_notificacao"
        android:id="@+id/notificacao"/>

    <LinearLayout
        android:focusable="true" android:focusableInTouchMode="true"
        android:layout_width="0px" android:layout_height="0px"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="176dp"
            android:orientation="vertical"
            android:background="@color/fonte_busca_rede_bairro"
            android:id="@+id/header_container">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_alertas_preencher_header_mudanca"
                android:layout_marginTop="16dp"
                android:id="@+id/header_icon"

                />

           <TextView
               android:layout_width="180dp"
               android:layout_height="wrap_content"
               android:text="Informe seus vizinhos sobre sua mudanÃ§a"
               android:textColor="@color/white"
               android:shadowColor="#30000000"
               android:lines="3"
               android:layout_gravity="center"
               android:gravity="center"
               android:textAlignment="center"
               android:fontFamily="Roboto-Regular"
               android:layout_margin="20dp"
               android:id="@+id/header_text"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="32dp"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                android:id="@+id/data_1_container">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="33dp"
                    android:src="@drawable/ic_alertas_preencher_data_normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/data_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="Roboto-Regular"
                        android:inputType="date"
                        android:textColor="@color/fonte_edit_text"
                        android:textColorHint="@color/hint_color"
                        android:textSize="16sp"
                        android:onClick="showDatePickerDialog"/>

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="0dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="0dp"
                        android:src="@drawable/sppinner_line" />
                </LinearLayout>

            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:visibility="gone"
                    android:id="@+id/data_2_container">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="33dp"
                        android:src="@drawable/ic_alertas_preencher_data_normal" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <TextView
                        android:id="@+id/data_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="Roboto-Regular"
                        android:inputType="date"
                        android:textColor="@color/fonte_edit_text"
                        android:textColorHint="@color/hint_color"
                        android:textSize="16sp"
                        android:onClick="showDatePickerDialog"/>

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="0dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="0dp"
                        android:src="@drawable/sppinner_line" />
                    </LinearLayout>

                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="54dp"
                >

                <EditText xmlns:custom="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/detalhes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="Roboto-Regular"
                    android:inputType="textMultiLine"
                    android:textColor="@color/fonte_edit_text"
                    android:textColorHint="@color/hint_color"
                    android:textSize="16sp"
                    android:nextFocusRight="@+id/cadastro_nome"
                    android:lines="10"
                    android:minLines="1"
                    android:maxLines="6"
                    android:scrollbars="vertical"
                    android:ems="6"
                    android:gravity="left|top"
                    />

                </LinearLayout>


        </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>
